{
  "policy": {
    "name": "Linux - CPU Threshold Exceeded",
    "description": "The CPU on the SERVER instance has exceeded 95% for at least 15 minutes.",
    "scope": {
      "elementTypes": [
        "SERVER"
      ]
    },
    "duration": 900,
    "conditions": [
      {
        "metric": "netuitive.linux.cpu.total.utilization.percent",
        "analytic": "actual",
        "operator": ">",
        "level": 95
      }
    ],
    "actions": [
      {
        "type": "event",
        "category": 3
      }
    ],
    "enabled": true,
    "deleted": false
  }
}
