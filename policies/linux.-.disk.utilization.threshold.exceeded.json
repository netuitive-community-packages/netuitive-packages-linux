{
  "policy": {
    "name": "Linux - Disk Utilization Threshold Exceeded",
    "description": "The consumed disk space on the SERVER instance has exceeded 95% for at least 15 minutes.",
    "scope": {
      "elementTypes": [
        "SERVER"
      ]
    },
    "duration": 900,
    "conditions": [
      {
        "wildcard": "netuitive.linux.diskspace.*.byte_percentused",
        "analytic": "actual",
        "operator": ">",
        "level": 95
      }
    ],
    "actions": [
      {
        "type": "event",
        "category": 3
      }
    ],
    "enabled": true,
    "deleted": false
  }
}
