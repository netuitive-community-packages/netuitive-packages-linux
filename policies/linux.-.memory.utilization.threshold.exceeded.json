{
  "policy": {
    "name": "Linux - Memory Utilization Threshold Exceeded",
    "description": "This is a CRITICAL event which is raised when memory utilization exceeds 95%.",
    "scope": {
      "elementTypes": [
        "SERVER"
      ]
    },
    "duration": 900,
    "conditions": [
      {
        "metric": "netuitive.linux.memory.utilizationpercent",
        "analytic": "actual",
        "operator": ">",
        "level": 95
      }
    ],
    "actions": [
      {
        "type": "event",
        "category": 3
      }
    ],
    "enabled": true,
    "deleted": false
  }
}
